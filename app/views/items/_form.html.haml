= form_for [list, item] do |f|
  - if item.errors.any?
    .alert.alert-danger
      %h4
        There are
        = pluralize(item.errors.count, "error")
      %ul
        - item.errors.full_messages.each do |msg|
          %li
            = msg
  .form-group
    = f.text_field :body, class: 'form-control', autofocus: true, placeholder: "Enter your to-do item"
  .form-group
    = f.submit "Save", class: 'btn btn-success'
