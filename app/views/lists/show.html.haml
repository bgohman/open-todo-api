- provide(:title, "#{@list.title}")

.row
  .col-md-8
    %h1 
      = @list.title
  - if policy(@list).edit?
    .col-md-4 
      = link_to "Edit List Name", edit_list_path
      = link_to "Delete List", @list, method: :delete, data: { confirm: 'Delete this list for sure?' }


.row  
  %ul
    - @items.each do |item|
      %li
        = item.body
        - if policy(item).edit?
          = link_to "Edit", edit_list_item_path(@list, item)
          = link_to "Delete", [@list, item], method: :delete, data: { confirm: 'Delete this topic for sure?' }
.div
  = render partial: 'items/form', locals: { list: @list, item: @item }          

