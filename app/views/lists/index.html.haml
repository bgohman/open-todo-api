- provide(:title, "Lists")
.row
  .col-md-8
  %h1 Lists
  .col-md-4
  = link_to "New List", new_list_path
  - @lists.each do |list|
    .media
      .media-body
        %h4
          .media-heading
            %ul
              %li
                = link_to list.title, list
                - if policy(list).edit?
                  %p
                    = link_to "Edit", edit_list_path(list)
                    = link_to "Delete", list, method: :delete, data: { confirm: 'Delete this list for sure?' }
